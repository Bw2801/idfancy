# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Set indentation for files.
[*.{java,kt,json,xml}]
indent_style = space
indent_size = 2

# YAML doesn't like tabs
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119
